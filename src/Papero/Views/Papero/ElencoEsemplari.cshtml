                                                        </div>
                                                    </div>


                                                </fieldset>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--#endregion -->

                    <span class="fa-stack fa-lg" role="button" data-toggle="modal" data-target="#modaleFiltriElencoEsemplari" ng-click="vm.aprimodaleFiltriElencoEsemplari()">
                        <i class="fa fa-square-o fa-stack-2x"></i>
                        <i class="fa fa-filter fa-stack-1x"></i>
                    </span>
                    <text>&nbsp;</text>
                    <span ng-show="vm.filtroSuAlberoAttivo">@localizzatore["Filtro sull'albero"]</span>
                    <span ng-hide="vm.filtroSuAlberoAttivo">@localizzatore["Elenco Completo"]</span>
                    <span ng-show="vm.filtroSuGeografiaAttivo"> - @localizzatore["Località di Cattura"]</span>
                    <span ng-show="vm.filtroDataDa || vm.filtroDataA"> - @localizzatore["Data di Cattura"]</span>
                    <span ng-show="vm.filtroSuRaccoglitoriAttivo"> - @localizzatore["Raccoglitori"]</span>
                    <span ng-show="vm.filtroSuCollocazioneAttivo"> - @localizzatore["Collocazione"]</span>
                    <span ng-show="vm.filtroSuSpedizioneAttivo"> - @localizzatore["Spedizione"]</span>
                    <span ng-show="vm.filtroSuCollezioneAttivo"> - @localizzatore["Collezione"]</span>
                </div>
                <form id="formLista"
                      asp-controller="Papero"
                      asp-action="ListaTesto"
                      target="_blank">
                    <input type="hidden" id="arrayIdEsemplariLista" name="arrayIdEsemplariLista" />
                    <input type="hidden" id="formatoLista" name="formatoLista" />
                </form>
                <form id="formQRCode"
                      asp-controller="QRCode"
                      asp-action="ListaQRCodeScheda"
                      target="_blank">
                    <input type="hidden" id="arrayIdEsemplariQRCode" name="arrayIdEsemplariQRCode" />
                    <input type="hidden" id="formatoQRCode" name="formatoQRCode" />
                </form>

                @if (await autorizzatore.AuthorizeAsync(User, "VisualizzaListe"))
                {
                    <div class="btn-group" role="group" ng-show="vm.esemplariSelezionati.length" ng-cloak>
                        <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-list text-white"></i> @localizzatore["Liste"]
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#" ng-click="vm.serializzaEsemplariPerLista(0)">@localizzatore["Lista Sintetica"]</a>
                            <a class="dropdown-item" href="#" ng-click="vm.serializzaEsemplariPerLista(1)">@localizzatore["Lista Dettagliata"]</a>
                        </div>
                    </div>
                }

                @if (await autorizzatore.AuthorizeAsync(User, "VisualizzaQRCodeScheda"))
                {
                    <div class="btn-group" role="group" ng-show="vm.esemplariSelezionati.length" ng-cloak>
                        <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-qrcode text-white"></i> @localizzatore["QRCode Scheda"]
                        </button>
                        <div class="dropdown-menu">
                            @for (int i = 0; i < _opzioni.Formati.Count; i++)
                            {
                                <a class="dropdown-item" href="#" ng-click="vm.serializzaEsemplariPerQRCode(@i)">@localizzatore[_opzioni.Formati[i].Misura]</a>
                            }
                        </div>
                    </div>
                }

            </div>
            <div class="panel-body">

                <table datatable="ng"
                       class="table table-striped table-bordered table-hover"
                       id="tabellaEsemplari"
                       dt-options="vm.opzioniTabella"
                       dt-column-defs="vm.colonneTabella">
                    <thead>
                        <tr>
                            <th>@localizzatore["MSNG"]</th>
                            <th>@localizzatore["Nome Scientifico"]</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="esemplare in vm.esemplariSelezionati">
                            <td>{{esemplare.msng}}</td>
                            <td>{{esemplare.genere + " " + esemplare.specie + " " + (esemplare.sottospecie == "-" ? "" : esemplare.sottospecie) + " " + esemplare.elencoAutori}}</td>
                            <td style="text-align:center">
                                @if (await autorizzatore.AuthorizeAsync(User, "VisualizzaDettaglioEsemplare"))
                                {
                                    <a ng-href="DettaglioEsemplare/{{esemplare.id}}" class="btn btn-sm btn-success">@localizzatore["Dettagli"]</a>
                                }
                                @if (await autorizzatore.AuthorizeAsync(User, "VisualizzaQRCodeScheda"))
                                {
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-primary dropdown-toggle pull-right" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-qrcode text-white"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            @for (int i = 0; i < _opzioni.Formati.Count; i++)
                                            {
                                                <a class="dropdown-item"
                                                   target="_blank"
                                                   ng-href="/QRCode/QRCodeScheda?id={{esemplare.id}}&formato=@i">@localizzatore[_opzioni.Formati[i].Misura]</a>
                                            }
                                        </div>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>