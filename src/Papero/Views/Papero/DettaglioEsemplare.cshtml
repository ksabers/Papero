                                {
                                    case "Maschio": <text>&nbsp;</text><i class="fa fa-mars"></i>
                                        break;
                                    case "Femmina": <text>&nbsp;</text><i class="fa fa-venus"></i>
                                        break;
                                    case "Prob. Maschio":<text>&nbsp;?</text><i class="fa fa-mars"></i>
