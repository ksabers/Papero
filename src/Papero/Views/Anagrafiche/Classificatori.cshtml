@{
    ViewBag.Title = localizzatore["Anagrafica Classificatori"];
}
@section css {

}

@section scripts {

<script src="~/js/anagraficaClassificatoriController.js"></script>

}
<div ng-app="papero-app" ng-controller="anagraficaClassificatoriController as vm">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        @localizzatore["Classificatori"]
                    </div>
                </div>
                <div id="panelInserimento" class="panel-body panel-collapse collapse">
                    corpo 1 del pannello
                </div>
                <div id="panelEdit" class="panel-body panel-collapse collapse">
                    corpo 2 del pannello
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table datatable="ng" class="table table-striped table-bordered table-hover" id="tabellaClassificatori" dt-options="vm.opzioniTabellaClassificatori">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Classificatore</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="classificatore in vm.classificatori">
                        <td>{{classificatore.id}}</td>
                        <td>{{classificatore.classificatore}}</td>
                        <td>azioni</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>