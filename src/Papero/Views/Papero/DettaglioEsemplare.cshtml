                                                            </div>
                                                            <div class="form-group">
                                                                <div class="col-lg-12">
                                                                    <div class="pull-right">
                                                                        <button type="reset" class="btn btn-outline-primary" data-dismiss="modal">@localizzatore["Annulla"]</button>
