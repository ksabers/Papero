                                        @if (User.IsInRole("Amministratore"))
                                        {
                                        <i role="button" class="fa fa-pencil fa-pull-left fa-fw text-muted" data-toggle="modal" data-target="#modaleNomi" ng-click="vm.apriModaleNomi()"></i>
