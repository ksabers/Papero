                                                            <div class="pull-right">
                                                                <button type="reset" class="btn btn-outline-primary" data-dismiss="modal" ng-click="vm.revertFiltri();">@localizzatore["Annulla"]</button>
                                                                <button id="bottoneSubmitFiltri" type="submit" class="btn btn-success" ng-click="vm.applicaFiltri();">@localizzatore["Filtra"]</button>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="alert alert-warning" ng-hide="vm.numeroRigheOK">
                                                        <div class="row">
                                                            <p class="col-lg-9 text-danger"><strong>@localizzatore["Attenzione"]:</strong> @localizzatore["numero di righe elevato - L'operazione potrebbe impiegare diverso tempo"]</p>
                                                            <div class="col-lg-3 pull-right">
                                                                <button type="reset" class="btn btn-outline-primary" data-dismiss="modal" ng-click="vm.revertFiltri();">@localizzatore["Annulla"]</button>
                                                                <button id="bottoneSubmitFiltri" type="submit" data-dismiss="modal" class="btn btn-success" ng-click="vm.eseguiFiltro();">@localizzatore["Filtra"]</button>
