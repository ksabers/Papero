@model IEnumerable<Papero.Models.Famiglie>
@{
    ViewBag.Title = "Famiglie";
}


@section css {
    <link href="~/lib/treeview/css/angular.treeview.css" rel="stylesheet" />
}


@section scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/treeview/angular.treeview.min.js"></script>
    <script src="~/js/treeController.js"></script>
}




<h2>Papero!</h2>
<div class="text-muted">Prima o poi riuscirò a farlo!</div>
<div>Lista delle famiglie: </div>

<div class="row">
    <div class="col-lg-6">

        <div ng-app="app-tree">
            <div ng-controller="treeController">


                <div style="margin:10px 0 30px 0; padding:10px; background-color:#EEEEEE; border-radius:5px; font:12px Tahoma;">
                    <span><b>Selected Node</b> : {{mytree.currentNode.nome}}</span>
                </div>

                <!--
              [TREE attribute]
              angular-treeview: the treeview directive
              tree-id : each tree's unique id.
              tree-model : the tree model on $scope.
              node-id : each node's id
              node-label : each node's label
              node-children: each node's children
            -->
                <div data-angular-treeview="true"
                     data-tree-id="mytree"
                     data-tree-model="roleList"
                     data-node-id="id"
                     data-node-label="nome"
                     data-node-children="figli">
                </div>

            </div>
        </div>

    </div>
</div>
