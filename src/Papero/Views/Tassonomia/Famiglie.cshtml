
@{
    ViewBag.Title = localizzatore["Tassonomia Famiglie"];
}

@section css {

<style type="text/css">
    a.btn.btn-sm.ng-hide {
        display: inline-block !important;
        visibility: hidden;
    }
</style>

}



@section scripts {

    <script src="~/js/tassonomia/tassonomiaFamiglieController.js"></script>

}
<div ng-app="papero-app" ng-controller="tassonomiaFamiglieController as vm">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        @localizzatore["Famiglie"]
                    </div>
                </div>

                <div id="panelEdit" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditFamiglia" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Modifica Famiglia"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputEditFamiglia"
                                       ng-change="vm.verificaEditFamiglia()"
                                       id="inputEditFamiglia"
                                       name="inputEditFamiglia" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputPasseriforme" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Passeriforme"]:</label>
                            <div class="col-lg-3">
                                <input type="checkbox"
                                       class="form-control"
                                       ng-model="vm.passeriforme"
                                       id="inputPasseriforme"
                                       name="inputPasseriforme" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.famigliaGiaPresente">
                                    <strong>@localizzatore["Famiglia già presente!"]</strong> (@localizzatore["Id"]: {{vm.famigliaDoppia.id}})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset"
                                                class="btn btn-outline-primary"
                                                ng-click="vm.annullaEdit()">@localizzatore["Annulla"]</button>
                                        <button type="submit"
                                                class="btn btn-success"
                                                ng-click="vm.editFamiglia()"
                                                ng-disabled="vm.pulsanteEditDisabilitato">@localizzatore["Modifica"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="panelCancella" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-lg-2 col-lg-offset-2 control-label text-danger">@localizzatore["Cancella Famiglia"]:</label>
                            <div class="col-lg-3" >
                                <h4>{{vm.famigliaDaCancellare}}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.famiglianonCancellabile">
                                    <strong>@localizzatore["Impossibile cancellare la Famiglia!"]</strong> (@localizzatore["Vi sono elementi dipendenti"])
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset"
                                                class="btn btn-outline-primary"
                                                ng-click="vm.annullaCancella()">
                                            @localizzatore["Annulla"]
                                            </button>
                                            <button type="submit"
                                                    class="btn btn-danger"
                                                    ng-click="vm.cancellaFamiglia()"
                                                    ng-show="vm.pulsanteCancellaVisibile">
                                                @localizzatore["Cancella"]
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table datatable="ng"
                   class="table table-striped table-bordered table-hover"
                   id="tabellaFamiglie"
                   dt-options="vm.opzioniTabellaFamiglie"
                   dt-column-defs="vm.colonneTabellaFamiglie">
                <thead>
                    <tr>
                        <th>@localizzatore["Id"]</th>
                        <th>@localizzatore["Famiglia"]</th>
                        <th>@localizzatore["Passeriforme"]</th>
                        <th>@localizzatore["Azioni"]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="famiglia in vm.famiglie">
                        <td>{{famiglia.id}}</td>
                        <td>{{famiglia.nome}}</td>
                        <td>
                            <i class="text-success fa fa-check fa-2x" ng-show="famiglia.passeriforme==true" ng-cloak></i>
                            <i class="text-danger fa fa-times fa-2x" ng-show="famiglia.passeriforme==false" ng-cloak></i>
                        </td>
                        <td>
                            @if (await autorizzatore.AuthorizeAsync(User, "EditTassonomia"))
                            {
                                <a class="btn btn-sm btn-success text-white"
                                   ng-click="vm.apriPannelloEdit(famiglia)">
                                    <i class="fa fa-pencil"></i>&nbsp;@localizzatore["Modifica"]
                                </a><text>&nbsp; &nbsp; &nbsp;</text>
                                <a class="btn btn-sm btn-danger"
                                   ng-click="vm.apriPannelloCancella(famiglia)">
                                    <i class="fa fa-trash"></i><text>&nbsp;</text>@localizzatore["Cancella"]
                                </a>
                            }
                            <a class="btn btn-sm btn-primary"
                               ng-href="/Tassonomia/Sottofamiglie/{{famiglia.id}}">
                                <i class="fa fa-arrow-right"></i><text>&nbsp;</text>@localizzatore["Sottofamiglie"] ({{famiglia.figli.length - 1}})
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>