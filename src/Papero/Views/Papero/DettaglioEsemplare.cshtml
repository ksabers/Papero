                                                                            <thead>
                                                                                <tr>
                                                                                    <th>@localizzatore["Ordinamento"]</th>
                                                                                    <th>@localizzatore["Classificatore"]</th>
                                                                                    <th></th>
                                                                                </tr>
                                                                            </thead>
