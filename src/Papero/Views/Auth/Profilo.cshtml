@model Papero.Models.UtentePapero
@{
    ViewBag.Title = localizzatore["Profilo Utente"];
}

@section scripts {

    <script src="~/js/auth/profiloController.js"></script>

}

<div ng-app="papero-app" ng-controller="profiloController as vm">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        @localizzatore["Profilo Utente"]: <strong>@Model.UserName</strong>
                    </div>
                </div>
                <div id="panelInserimento" class="panel-body">
                    <form asp-controller="Auth" asp-action="AggiornaProfilo">
                        <div class="row">
                            <div class="form-group">
                                <label for="inputInsertNome" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Nome"]:</label>
                                <div class="col-lg-3">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.inputInsertNome"
                                           ng-change="vm.verificaInsertUtente()"
                                           id="inputInsertNome"
                                           name="inputInsertNome"
                                           value="@Model.Nome"
                                           required />
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="form-group">
                                <label for="inputInsertCognome" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Cognome"]:</label>
                                <div class="col-lg-3">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.inputInsertCognome"
                                           ng-change="vm.verificaInsertUtente()"
                                           id="inputInsertCognome"
                                           name="inputInsertCognome"
                                           value="@Model.Cognome"
                                           required />
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="form-group">
                                <label for="inputInsertEmail" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Email"]:</label>
                                <div class="col-lg-3">
                                    <input type="email"
                                           class="form-control"
                                           ng-model="vm.inputInsertEmail"
                                           ng-change="vm.verificaInsertEmail()"
                                           id="inputInsertEmail"
                                           name="inputInsertEmail"
                                           value="@Model.Email"
                                           required />
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="form-group">
                                <label for="inputInsertTelefono" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Telefono"]:</label>
                                <div class="col-lg-3">
                                    <input type="tel"
                                           class="form-control"
                                           ng-model="vm.inputInsertTelefono"
                                           ng-change="vm.verificaInsertTelefono()"
                                           id="inputInsertTelefono"
                                           name="inputInsertTelefono"
                                           value="@Model.PhoneNumber" />
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <hr />
                        <div class="row">
                            <div class="form-group">
                                <label for="inputInsertPassword" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Nuova Password"]:<br /><i>@localizzatore["(lasciare vuoto per non variarla)"]</i></label>
                                <div class="col-lg-3">
                                    <input type="password"
                                           class="form-control"
                                           ng-model="vm.inputInsertPassword"
                                           ng-change="vm.verificaInsertPassword()"
                                           id="inputInsertPassword"
                                           name="inputInsertPassword"/>
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <div class="row">
                            <div class="form-group">
                                <label for="inputConfermaPassword" class="col-lg-2 col-lg-offset-3 control-label text-primary">@localizzatore["Conferma Nuova Password"]:</label>
                                <div class="col-lg-3">
                                    <input type="password"
                                           class="form-control"
                                           ng-model="vm.inputConfermaPassword"
                                           ng-change="vm.verificaInsertPassword()"
                                           id="inputConfermaPassword"
                                           name="inputConfermaPassword"/>
                                </div>
                            </div>
                        </div>
                        <p></p>
                        <hr />
                        <div class="row">
                            <div class="col-lg-5 col-lg-offset-3">
                                <div class="form-group">

                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-success" ng-click="vm.inserisciUtente()" ng-disabled="vm.pulsanteInsertDisabilitato">@localizzatore["Modifica"]</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </form>

                </div>
             </div>
        </div>
    </div>
</div>