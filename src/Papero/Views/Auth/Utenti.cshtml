
@{
    ViewBag.Title = localizzatore["Anagrafica Utenti"];
}
@section css {

}

@section scripts {

    <script src="~/js/anagraficaUtentiController.js"></script>

}
<div ng-app="papero-app" ng-controller="anagraficaUtentiController as vm">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        @localizzatore["Utenti"]&nbsp;&nbsp;&nbsp;
                        <a href="#" class="btn btn-success" ng-click="vm.apriPannelloInserimento()" ng-show="vm.pulsanteInserimentoVisibile"><i class="fa fa-plus"></i> @localizzatore["Nuovo"]</a>
                    </div>
                </div>
                <div id="panelInserimento" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertNome" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Nome"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputInsertNome"
                                       ng-change="vm.verificaInsertUtente()"
                                       id="inputInsertNome"
                                       name="inputInsertNome" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertCognome" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Cognome"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputInsertCognome"
                                       ng-change="vm.verificaInsertUtente()"
                                       id="inputInsertCognome"
                                       name="inputInsertCognome" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertLogin" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Login"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputInsertLogin"
                                       ng-change="vm.verificaInsertLogin()"
                                       id="inputInsertLogin"
                                       name="inputInsertLogin" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertEmail" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Email"]:</label>
                            <div class="col-lg-3">
                                <input type="email"
                                       class="form-control"
                                       ng-model="vm.inputInsertEmail"
                                       ng-change="vm.verificaInsertEmail()"
                                       id="inputInsertEmail"
                                       name="inputInsertEmail" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertTelefono" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Telefono"]:</label>
                            <div class="col-lg-3">
                                <input type="tel"
                                       class="form-control"
                                       ng-model="vm.inputInsertTelefono"
                                       ng-change="vm.verificaInsertTelefono()"
                                       id="inputInsertTelefono"
                                       name="inputInsertTelefono" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertPassword" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Password"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputInsertPassword"
                                       ng-change="vm.verificaInsertPassword()"
                                       id="inputInsertPassword"
                                       name="inputInsertPassword" />
                            </div>
                        </div>
                    </div>

                    <p></p>
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-2">
                            <table datatable="ng"
                                   class="table table-striped table-bordered table-hover"
                                   id="tabellaInsertRuoli"
                                   dt-options="vm.opzioniTabellaInsertRuoli"
                                   dt-column-defs="vm.colonneTabellaInsertRuoli">
                                <thead>
                                    <tr>
                                        <th>@localizzatore["Ruolo"]</th>
                                        <th>@localizzatore["Attivo"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="ruolo in vm.insertRuoli">
                                        <td>{{ruolo.name}}</td>
                                        <td>
                                            <input class="form-control"
                                                   type="checkbox"
                                                   ng-model="ruolo.autorizzazione"
                                                   ng-change="vm.verificaInsertRuoli()"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                    <div class="alert alert-danger" ng-show="vm.utenteGiaPresente">
                                        <strong>@localizzatore["Utente già presente!"]</strong> (@localizzatore["Id"]: {{vm.utenteDoppio.id}})
                                    </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset" class="btn btn-outline-primary" ng-click="vm.annullaInserimento()">@localizzatore["Annulla"]</button>
                                        <button type="submit" class="btn btn-success" ng-click="vm.inserisciUtente()" ng-disabled="vm.pulsanteInsertDisabilitato">@localizzatore["Inserisci"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="panelEdit" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditNome" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Nome"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputEditNome"
                                       ng-change="vm.verificaEditUtente()"
                                       id="inputEditNome"
                                       name="inputEditNome" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditCognome" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Cognome"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputEditCognome"
                                       ng-change="vm.verificaEditUtente()"
                                       id="inputEditCognome"
                                       name="inputEditCognome" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditLogin" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Login"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputEditLogin"
                                       ng-change="vm.verificaEditLogin()"
                                       id="inputEditLogin"
                                       name="inputEditLogin"
                                       ng-readonly="vm.inputEditLogin == 'amministratore'" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditEmail" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Email"]:</label>
                            <div class="col-lg-3">
                                <input type="email"
                                       class="form-control"
                                       ng-model="vm.inputEditEmail"
                                       ng-change="vm.verificaEditEmail()"
                                       id="inputEditEmail"
                                       name="inputEditEmail" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditTelefono" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Telefono"]:</label>
                            <div class="col-lg-3">
                                <input type="tel"
                                       class="form-control"
                                       ng-model="vm.inputEditTelefono"
                                       ng-change="vm.verificaEditTelefono()"
                                       id="inputEditTelefono"
                                       name="inputEditTelefono" />
                            </div>
                        </div>
                    </div>
                    <p></p>
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditPassword" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Nuova Password"]:</label>
                            <div class="col-lg-3">
                                <input type="password"
                                       class="form-control"
                                       ng-model="vm.inputEditPassword"
                                       ng-change="vm.verificaEditPassword()"
                                       id="inputEditPassword"
                                       name="inputEditPassword" />
                            </div>
                        </div>
                    </div>

                    <p></p>
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-2">
                            <table datatable="ng"
                                   class="table table-striped table-bordered table-hover"
                                   id="tabellaEditRuoli"
                                   dt-options="vm.opzioniTabellaEditRuoli"
                                   dt-column-defs="vm.colonneTabellaEditRuoli">
                                <thead>
                                    <tr>
                                        <th>@localizzatore["Ruolo"]</th>
                                        <th>@localizzatore["Attivo"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="ruolo in vm.editRuoli">
                                        <td>{{ruolo.name}}</td>
                                        <td>
                                            <input class="form-control"
                                                   type="checkbox"
                                                   ng-model="ruolo.autorizzazione"
                                                   ng-change="vm.verificaEditRuoli()"
                                                   ng-disabled="vm.inputEditLogin == 'amministratore'" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>




                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.utenteGiaPresente">
                                    <strong>@localizzatore["Utente già presente!"]</strong> (@localizzatore["Login"]: {{vm.utenteDoppio.userName}})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset" 
                                                class="btn btn-outline-primary" 
                                                ng-click="vm.annullaEdit()">@localizzatore["Annulla"]</button>
                                        <button type="submit" 
                                                class="btn btn-success" 
                                                ng-click="vm.editUtente()" 
                                                ng-disabled="vm.pulsanteEditDisabilitato">@localizzatore["Modifica"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="panelCancella" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-lg-2 col-lg-offset-2 control-label text-danger">@localizzatore["Cancella Utente"]:</label>
                            <div class="col-lg-3" >
                                <h4>{{vm.utenteDaCancellare}}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.utentenonCancellabile">
                                    <strong>@localizzatore["Impossibile cancellare l'Utente!"]</strong>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset"
                                                class="btn btn-outline-primary"
                                                ng-click="vm.annullaCancella()">
                                            @localizzatore["Annulla"]
                                        </button>
                                        <button type="submit"
                                                class="btn btn-danger"
                                                ng-click="vm.cancellaUtente()"
                                                ng-show="vm.pulsanteCancellaVisibile">
                                            @localizzatore["Cancella"]
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table datatable="ng"
                   class="table table-striped table-bordered table-hover"
                   id="tabellaUtenti"
                   dt-options="vm.opzioniTabellaUtenti"
                   dt-column-defs="vm.colonneTabellaUtenti">
                <thead>
                    <tr>
                        <th>@localizzatore["Nome"]</th>
                        <th>@localizzatore["Cognome"]</th>
                        <th>@localizzatore["Login"]</th>
                        <th>@localizzatore["Email"]</th>
                        <th>@localizzatore["Telefono"]</th>
                        <th>@localizzatore["Ruoli"]</th>
                        <th>@localizzatore["Azioni"]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="utente in vm.utenti">
                        <td>{{utente.nome}}</td>
                        <td>{{utente.cognome}}</td>
                        <td>{{utente.userName}}</td>
                        <td>{{utente.email}}</td>
                        <td>{{utente.phoneNumber}}</td>
                        <td>{{vm.elencoRuoliUtente(utente)}}</td>
                        <td>
                            <a class="btn btn-sm btn-success text-white"
                                ng-click="vm.apriPannelloEdit(utente)">
                                <i class="fa fa-pencil"></i>&nbsp;@localizzatore["Modifica"]
                            </a><text>&nbsp; &nbsp; &nbsp;</text>
                            <a class="btn btn-sm btn-danger"
                                ng-click="vm.apriPannelloCancella(utente)"
                                ng-hide="utente.userName == 'amministratore'">
                                <i class="fa fa-trash"></i><text>&nbsp;</text>@localizzatore["Cancella"]
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>