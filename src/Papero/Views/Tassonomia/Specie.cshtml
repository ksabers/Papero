@model Papero.Models.Generi
@{
    ViewBag.Title = localizzatore["Tassonomia Specie"];
}
@section css {

<style type="text/css">
    a.btn.btn-sm.ng-hide {
        display: inline-block !important;
        visibility: hidden;
    }
</style>

}

@section scripts {

    <script src="~/js/tassonomia/tassonomiaSpecieController.js"></script>

}
<div ng-app="papero-app" ng-controller="tassonomiaSpecieController as vm">
    <input type="hidden" id="idGenereHidden" name="idGenereHidden" value="@Model.Id"/>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        @localizzatore["Specie"]&nbsp;&nbsp;&nbsp;
                        @if (await autorizzatore.AuthorizeAsync(User, "EditTassonomia"))
                        {
                            <a href="#" class="btn btn-success" ng-click="vm.apriPannelloInserimento()" ng-show="vm.pulsanteInserimentoVisibile"><i class="fa fa-plus"></i> @localizzatore["Nuova"]</a>
                        }

                    </div>
                </div>
                <div id="panelInserimento" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label for="inputInsertSpecie" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Inserisci nuova Specie"]:</label>
                            <div class="col-lg-3">
                                <input type="text" 
                                       class="form-control" 
                                       ng-model="vm.inputInsertSpecie" 
                                       ng-change="vm.verificaSpecie()" 
                                       id="inputInsertSpecie" 
                                       name="inputInsertSpecie" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                    <div class="alert alert-danger" ng-show="vm.specieGiaPresente">
                                        <strong>@localizzatore["Specie già presente!"]</strong> (@localizzatore["Id"]: {{vm.specieDoppia.id}})
                                    </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset" class="btn btn-outline-primary" ng-click="vm.annullaInserimento()">@localizzatore["Annulla"]</button>
                                        <button type="submit" class="btn btn-success" ng-click="vm.inserisciSpecie()" ng-disabled="vm.pulsanteInsertDisabilitato">@localizzatore["Inserisci"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="panelEdit" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label for="inputEditSpecie" class="col-lg-2 col-lg-offset-2 control-label text-primary">@localizzatore["Modifica Specie"]:</label>
                            <div class="col-lg-3">
                                <input type="text"
                                       class="form-control"
                                       ng-model="vm.inputEditSpecie"
                                       ng-change="vm.verificaEditSpecie()"
                                       id="inputEditSpecie"
                                       name="inputEditSpecie" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.specieGiaPresente">
                                    <strong>@localizzatore["Specie già presente!"]</strong> (@localizzatore["Id"]: {{vm.specieDoppia.id}})
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset" 
                                                class="btn btn-outline-primary" 
                                                ng-click="vm.annullaEdit()">@localizzatore["Annulla"]</button>
                                        <button type="submit" 
                                                class="btn btn-success" 
                                                ng-click="vm.editSpecie()" 
                                                ng-disabled="vm.pulsanteEditDisabilitato">@localizzatore["Modifica"]</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="panelCancella" class="panel-body panel-collapse collapse">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-lg-2 col-lg-offset-2 control-label text-danger">@localizzatore["Cancella Specie"]:</label>
                            <div class="col-lg-3" >
                                <h4>{{vm.specieDaCancellare}}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-3 col-lg-offset-4">
                                <div class="alert alert-danger" ng-show="vm.specienonCancellabile">
                                    <strong>@localizzatore["Impossibile cancellare la Specie!"]</strong> (@localizzatore["Vi sono elementi dipendenti"])
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-2">
                                    <div class="pull-right">
                                        <button type="reset"
                                                class="btn btn-outline-primary"
                                                ng-click="vm.annullaCancella()">
                                            @localizzatore["Annulla"]
                                        </button>
                                        <button type="submit"
                                                class="btn btn-danger"
                                                ng-click="vm.cancellaSpecie()"
                                                ng-show="vm.pulsanteCancellaVisibile">
                                                @localizzatore["Cancella"]
                                        </button>
                                     </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label for="uiSelectNazione" class="col-lg-1 col-lg-offset-3 control-label text-primary">@localizzatore["Famiglia"]:</label>
            <div class="col-lg-3">
                <ui-select id="uiSelectFamiglia" 
                           ng-model="vm.famigliaSelezionata" 
                           ng-change="vm.selezionaFamiglia()" 
                           ng-disabled="vm.dropdownDisabilitate">
                    <ui-select-match>
                        <span ng-bind="$select.selected.nome"></span>
                    </ui-select-match>
                    <ui-select-choices repeat="famiglia in (vm.famiglie | filter: $select.search) track by famiglia.id">
                        <span ng-bind="famiglia.nome"></span>
                    </ui-select-choices>
                </ui-select>
            </div>
        </div>
    </div>
    <p></p>
    <div class="row">
        <div class="form-group">
            <label for="uiSelectSottofamiglia" class="col-lg-1 col-lg-offset-3 control-label text-primary">@localizzatore["Sottofamiglia"]:</label>
            <div class="col-lg-3">
                <ui-select id="uiSelectSottofamiglia" 
                           ng-model="vm.sottofamigliaSelezionata" 
                           ng-change="vm.selezionaSottofamiglia()" 
                           ng-disabled="vm.dropdownDisabilitate">
                    <ui-select-match>
                        <span ng-bind="$select.selected.nome"></span>
                    </ui-select-match>
                    <ui-select-choices repeat="sottofamiglia in (vm.sottofamiglie | filter: $select.search) track by sottofamiglia.id">
                        <span ng-bind="sottofamiglia.nome"></span>
                    </ui-select-choices>
                </ui-select>
            </div>
        </div>
    </div>
    <p></p>
    <div class="row">
        <div class="form-group">
            <label for="uiSelectTribu" class="col-lg-1 col-lg-offset-3 control-label text-primary">@localizzatore["Tribù"]:</label>
            <div class="col-lg-3">
                <ui-select id="uiSelectTribu" 
                           ng-model="vm.tribuSelezionata" 
                           ng-change="vm.selezionaTribu()" 
                           ng-disabled="vm.dropdownDisabilitate">
                    <ui-select-match>
                        <span ng-bind="$select.selected.nome"></span>
                    </ui-select-match>
                    <ui-select-choices repeat="tribu in (vm.tribu | filter: $select.search) track by tribu.id">
                        <span ng-bind="tribu.nome"></span>
                    </ui-select-choices>
                </ui-select>
            </div>
        </div>
    </div>
    <p></p>
    <div class="row">
        <div class="form-group">
            <label for="uiSelectGenere" class="col-lg-1 col-lg-offset-3 control-label text-primary">@localizzatore["Genere"]:</label>
            <div class="col-lg-3">
                <ui-select id="uiSelectGenere"
                           ng-model="vm.genereSelezionato"
                           ng-change="vm.selezionaGenere()"
                           ng-disabled="vm.dropdownDisabilitate">
                    <ui-select-match>
                        <span ng-bind="$select.selected.nome"></span>
                    </ui-select-match>
                    <ui-select-choices repeat="genere in (vm.generi | filter: $select.search) track by genere.id">
                        <span ng-bind="genere.nome"></span>
                    </ui-select-choices>
                </ui-select>
            </div>
            <div class="col-lg-1">
                <a class="btn btn-sm btn-primary"
                   ng-href="/Tassonomia/Generi/{{vm.tribuSelezionata.id}}">
                    <i class="fa fa-arrow-left"></i><text>&nbsp;</text>@localizzatore["Generi"]
                </a>
            </div>
        </div>
    </div>
    <p></p>
    <div class="row">
        <div class="col-lg-12">
            <table datatable="ng"
                   class="table table-striped table-bordered table-hover"
                   id="tabellaSpecie"
                   dt-options="vm.opzioniTabellaSpecie"
                   dt-column-defs="vm.colonneTabellaSpecie">
                <thead>
                    <tr>
                        <th>@localizzatore["Id"]</th>
                        <th>@localizzatore["Specie"]</th>
                        <th>@localizzatore["Azioni"]</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="specie in vm.specie">
                        <td>{{specie.id}}</td>
                        <td>{{specie.nome}}</td>
                        <td>
                            @if (await autorizzatore.AuthorizeAsync(User, "EditTassonomia"))
                            {
                                <a class="btn btn-sm btn-success text-white"
                                   ng-click="vm.apriPannelloEdit(specie)">
                                    <i class="fa fa-pencil"></i>&nbsp;@localizzatore["Modifica"]
                                </a><text>&nbsp; &nbsp; &nbsp;</text>
                                <a class="btn btn-sm btn-danger"
                                   ng-click="vm.apriPannelloCancella(specie)">
                                    <i class="fa fa-trash"></i><text>&nbsp;</text>@localizzatore["Cancella"]
                                </a>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>